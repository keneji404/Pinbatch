{
    "manifest_version": 2,
    "name": "Pinboard",
    "version": "1.0",
    "description": "Batch downloads Pinterest Images from you Boards",
    "permissions": [
        "downloads",
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "96": "icons/icon-96.png",
            "128": "icons/icon-128.png"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "popup.js",
        "popup.html"
    ]
}